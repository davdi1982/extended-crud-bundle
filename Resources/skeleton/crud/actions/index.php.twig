
    /**
{% block phpdoc_method_header %}
     * Lists all {{ entity }} entities.
{% endblock phpdoc_method_header %}
     *
{% block phpdoc_method_annotations %}
{% if 'annotation' == format %}
     * @Route("/list/{page}/{search}", name="{{ route_name_prefix }}", requirements={defaults={"page" = 1, "search" = ""})
     * @Route("/", name="{{ route_name_prefix }}_root", defaults={"page" = 1})
     * @Method("GET")
     * @Template()
{% endif %}
{% endblock phpdoc_method_annotations %}
     */
{% block method_definition %}
    public function indexAction($page = 1, $search = "")
{% endblock method_definition %}
    {
{% block method_body %}
        $em = $this->getDoctrine()->getManager();
        
        $count = $em
            ->getRepository('{{ bundle }}:{{ entity }}')
            ->createQueryBuilder('e')
            ->select('COUNT(e)'){% set firstField = TRUE %}
            {%- for field, metadata in fields -%}
                {%- if field|replace({'_': ''}) != "id" and metadata.type not in ['date', 'datetime'] -%}
                    {%- if firstField %}{% set firstField = FALSE %}

            ->where('e.{{ field|replace({'_': ''}) }} LIKE :{{ field|replace({'_': ''}) }}')
                    {%- else %}

            ->andWhere('e.{{ field|replace({'_': ''}) }} LIKE :{{ field|replace({'_': ''}) }}')
                    {%- endif %}

            ->setParameter(':{{ field|replace({'_': ''}) }}', '%' . $search . '%')
                {%- endif -%}
            {%- endfor %}

            ->getQuery()
            ->getSingleScalarResult()
        ;

        $pages = ceil($count / 20);
        
        
        ${{ entity|lower }}List = $em
            ->getRepository('{{ bundle }}:{{ entity }}')
            ->createQueryBuilder('e'){% set firstField = TRUE %}{%- for field, metadata in fields %}{% if field|replace({'_': ''}) != "id" and metadata.type not in ['date', 'datetime'] %}{% if firstField %}{% set firstField = FALSE%}
            
            ->where('e.{{ field|replace({'_': ''}) }} LIKE :{{ field|replace({'_': ''}) }}')
            {% else %}
            ->andWhere('e.{{ field|replace({'_': ''}) }} LIKE :{{ field|replace({'_': ''}) }}')
            {% endif %}->setParameter(':{{ field|replace({'_': ''}) }}', '%' . $search . '%'){% endif %}
            {% endfor%}
                
            ->setFirstResult(($page - 1) * 20)
            ->setMaxResults(20)
            ->getQuery()
            ->getResult()
        ;
{% endblock method_body %}

{% block method_return %}
{% if 'annotation' == format %}
        return array(
            '{{ entity|lower }}List' => ${{ entity|lower }}List,
            'pages' => $pages,
            'page' => $page,
        );
{% else %}
        return $this->render('{{ bundle }}:{{ entity|replace({'\\': '/'}) }}:index.html.twig', array(
            '{{ entity|lower }}List' => ${{ entity|lower }}List,
            'pages' => $pages,
            'page' => $page,
            'search' => $search,
            'searchForm' => $this->createSearchForm($search)->createView(),
        ));
{% endif %}
{% endblock method_return %}
    }
